<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tvItemHomeImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/hogar_image"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tvItemHomeDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Hogar"
                android:textSize="@dimen/tamañoItemsHomePrimary"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:lines="1"/>
            <TextView
                android:id="@+id/tvItemNombreJefe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de la Jefe"
                android:textSize="@dimen/tamañoItemsHomeSecondary"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:lines="1"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>