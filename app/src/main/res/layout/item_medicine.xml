<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    android:layout_margin="@dimen/cardMargin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_parrafo">

        <TextView
            android:id="@+id/tvDetailGrandParentMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medicamento"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDetailChargeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Recarga"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tvDetailMedicineQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad Restante"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tvDetailMedicineDose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dósis Diaria"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tvDetailEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de terminación"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>